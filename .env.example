# OSCAR Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# LLM API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional, for future migration
GEMINI_API_KEY=your_gemini_api_key_here  # Optional, for future migration

# Application Settings
OSCAR_LOG_LEVEL=INFO
OSCAR_DATA_DIR=./data
OSCAR_SAFE_MODE=true

# Speech Settings
OSCAR_STT_PROVIDER=vosk
OSCAR_AUDIO_DEVICE_INDEX=0  # Use default audio device

# Development Settings
OSCAR_DEBUG=false
OSCAR_DRY_RUN=false